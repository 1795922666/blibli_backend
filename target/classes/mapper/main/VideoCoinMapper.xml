<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zspt.blibli.main.mapper.VideoCoinMapper">
    <select id="numberOfInvestmentsMade" resultType="int">
        SELECT
        IFNULL(SUM(v.coin_count), 0) AS maxCoin
        FROM
        bli_video_coin v
        WHERE
        v.user_id = #{userId}
        AND v.video_id = #{videoId}
    </select>
</mapper>